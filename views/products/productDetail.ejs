        <p class="prod-detail"><%= resultado.description %> </p>
        <p class="prod-talle">Talle:</p>
        <div class="margin-top">
        <button type="button" class="button-size">XS</button>
        <button type="button" class="button-size">S</button> 
        <button type="button" class="button-size">M</button> 
        <button type="button" class="button-size">L</button> 
        <button type="button" class="button-size">XL</button> 
