                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
            
                            </select>
                </form>
            </div>
            <div class="d-flex margin-top">
                <form action="">
                    <button type="submit" class="prod-shop-cart send">Agregar al carrito</button>
                    </form>


            </div>
       
        <div class="d-flex margin-top">
            <% if(locals.user && locals.user.tipo.user_type == 'admin'){ %>  
            <a href="/products/<%= resultado.id %>/edit">
                <button type="submit" value="Enviar" class="prod-shop-cart edit">Editar</button>
            </a>
            <form action="/products/<%=resultado.id%>?_method=DELETE" method="POST">
                <button type="submit" class="prod-shop-cart delete">Eliminar</button>
            </form>
            <% }else{ %>
                
            <div></div>    
            <% } %> 
