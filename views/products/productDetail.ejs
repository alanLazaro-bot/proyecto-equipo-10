        <a href="" class="ruta d-flex zoom"><i class="fas fa-search-plus"></i></a>
         
    </div>
   
    <div class="art-data margin-top flex-data prod-border">
        <h1 class="prod-title"><%=resultado.name %> </h1>
        <p class="prod-price">$<%= resultado.price  %> </p>
        <p class="prod-color margin-top" >Color:</p>
        <img src="/images/products/blusa-2.jpeg" alt="color-miniatura" class="mini-color">
        <p class="prod-color margin-top">Detalle:</p>
        <p class="prod-detail"><%= resultado.description %> </p>
        <p class="prod-talle">Talle:</p>
        <div class="margin-top">
        <button type="button" class="button-size">XS</button>
        <button type="button" class="button-size">S</button> 
        <button type="button" class="button-size">M</button> 
        <button type="button" class="button-size">L</button> 
        <button type="button" class="button-size">XL</button> 
        <button type="button" class="button-size">XXL</button>
        </div> 
    
        <div class="d-flex margin-top">
            <form action="resultado.html" method="POST">
            <select name="cant" id="cant">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            
        </select>
         <form action="">
            <button type="submit" class="prod-shop-cart send">Agregar al carrito</button>
        </form>
        </div>
        <div class="d-flex margin-top">
            <a href="/products/edit/<%= resultado.id %>">
                <button type="submit" value="Enviar" class="prod-shop-cart edit">Editar</button>
            </a>
            <form action="/products/delete/<%=resultado.id%>" method="POST">
                <button type="submit" value="Enviar" class="prod-shop-cart delete">Eliminar</button>
            </form>
            
        </div>
        

