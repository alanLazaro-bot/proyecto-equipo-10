<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/products/productAdd.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet"> 

    <title>Document</title>
</head>
<body class="body">
    <%-include('../partials/header.ejs')%>

    <main>

<h1 class="title-font space center">Cargá tu Producto</h1>
<!--nombre del producto-->        
<form action="/products" method="POST" >
     <div class="center space"> 
        <label for="name" class="rob-14"></label>
        <input type="text" name="name" id="name" placeholder="Nombre del Producto" class="nombre-prod nombre-size wdth-bar padding-text" value="<%= data.name  %>">
     </div>  
     <% if (errors.name != undefined){ %>
     <div><%= errors.name.msg  %> </div>
     <% }%>

<!-- / nombre del producto-->

<!--descripcion-->
    <div class="center space"> 
        <textarea name="description" id="description" rows="10" cols="80" placeholder="Descripción" value="<%= data.description  %>"></textarea>
    </div > 
    <% if (errors.description != undefined){ %>
    <div><%= errors.description.msg  %> </div>
    <% }%>
<!--/descripcion-->

<!--categoria-->
<div class="center space rob-18"> 
        <label for="category">Categoría</label>
    

        <%- include('../select.ejs', {
        name: 'category',
        options:[
        {value : "Alimentos/Bebidas", text : "Alimentos/Bebidas"},

        {value: "Indumentaria", text:"Indumentaria"},

        {value: "Hogar", text: "Hogar"},

        {value: "Servicios", text: "Servicios"}]
        }) %> 
   
</div>  
<% if (errors.category != undefined){ %>
<div><%= errors.category.msg  %> </div>
<% }%>

    <!--/categoria-->
      <!--talles-->
<div class = "center space rob-18"> 
        <label for="size">Talle</label>
    
        <%- include('../select.ejs',{
        name: 'size',
        options:[ 
        {value : "xs", text : "XS"},
        {value : "s", text : "S"},
        {value : "m", text : "M"},
        {value : "l", text : "L"},
        {value : "xl", text : "XL"},
        {value : "xxl", text : "XXL"}]
        }) %> 
    </div>
</div>  
<% if (errors.category != undefined){ %>
<div><%= errors.category.msg  %> </div>
<% }%>

    <!--/talles-->
<!--precio del producto-->
    <div class="center space"> 
        <label for="price"></label>
        <input type="text" name="price" id="price" placeholder="Precio" class="nombre-size" value="<%= data.price  %> ">
    </div> 
    <% if (errors.price != undefined){ %>
        <div><%= errors.price.msg  %> </div>
        <% }%> 

    <!--/ precio del producto-->
    <!--Stock-->
    <div class="center space"> 
        <label for="stock"></label>
        <input type="text" name="stock" id="stock" placeholder="Stock" class="nombre-size" value="<%= data.stock || 1  %> ">
    </div> 
    <% if (errors.stock != undefined){ %>
        <div><%= errors.stock.msg  %> </div>
        <% }%> 
        <!--/Stock-->
    
   
  
    <!--carga de imagenes-->

        <div class ="center space rob-18"><label for="foto"> Fotos del Producto </label></div>
        <div class="center space"><input type="file" name="foto" class=""></div>
   
    <!--/ carga imagenes-->



    <!--boton enviar-->
    <div  class="center space">
        <button type="submit" class=" button-send">Guardar</button>
    </div>
    <!--fin boton enviar-->
    


</form>
  
        
         
      
    </main>
    
</body>
</html>
