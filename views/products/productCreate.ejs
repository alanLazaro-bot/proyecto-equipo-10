</head>
<body class="body">
    <%-include('../partials/header.ejs')%>

    <main>

<h1 class="title-font space center">Cargá tu Producto</h1>
<!--nombre del producto-->        
<form action="/products" method="POST" >
     <div class="center space"> 
        <label for="name" class="rob-14"></label>
        <input type="text" name="name" id="name" placeholder="Nombre del Producto" class="nombre-prod nombre-size wdth-bar padding-text">
     </div>  
<!-- / nombre del producto-->

<!--descripcion-->
    <div class="center space"> 
        <textarea name="description" id="description" rows="10" cols="80">Descripción</textarea>
    </div > 
<!--/descripcion-->

<!--categoria-->
    <div class="center space rob-18"> 
        <label for="category">Categoría</label>
    <div class="center space">
        <select name="category" id="category">
            <option value="AyB">Alimentos y Bebidas</option>
            <option value="Ind">Indumentaria</option>
            <option value="Hog">Hogar</option>
            <option value="Ser">Servicios</option>
        </select>
    </div>
</div>  
    <!--/categoria-->
      <!--talles-->
      <div class="center space rob-18">Talles</p>
      
      <div class="center">
        <div class= "space">
        <label for="size" class="">XS</label>
        <input type="checkbox" name="size" value="XS" class="box-margin">
        <label for="size" class="">S</label>
        <input type="checkbox" name="size" value="S" class="box-margin">
        <label for="size" class="">M</label>
        <input type="checkbox" name="size" value="M" class="box-margin">
        <label for="size"class="">L</label>
        <input type="checkbox" name="size" value="L" class="box-margin">
        <label for="size" class="">XL</label>
        <input type="checkbox" name="size" value="XL" class="box-margin">
        <label for="size" class="">XXL</label>
        <input type="checkbox" name="size" value="XXL" class="box-margin">
    </div>   
    </div>

    <!--/talles-->
<!--precio del producto-->
    <div class="center space"> 
        <label for="price"></label>
        <input type="text" name="price" id="price" placeholder="Precio" class="nombre-size">
    </div>  
    <!--/ precio del producto-->
   
  
    <!--carga de imagenes-->

        <div class ="center space rob-18"><label for="foto"> Fotos del Producto</label></div>
        <div class="center space"><input type="file" name="foto" class=""></div>
   
    <!--/ carga imagenes-->



    <!--boton enviar-->
    <div  class="center space">
        <button type="submit" class=" button-send">Guardar</button>
    </div>
    <!--fin boton enviar-->
    


</form>
  
        
         
      
    </main>
    
</body>
</html>
